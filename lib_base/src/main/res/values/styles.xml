<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--默认TextView风格-->

    <style name="text_white_12sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
    <style name="text_white_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
    <style name="text_white_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
    <style name="text_white_18sp">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
    <style name="text_white_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="text_black_12sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="text_black_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="text_black_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="text_black_18sp">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="text_black_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="text_bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!--    沉浸相关-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--沉浸展开-->
    <style name="TextAppearance_ExpandedTitle" parent="android:Animation" tools:ignore="ResourceName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--沉浸折叠-->
    <style name="TextAppearance_CollapsedTitle" parent="android:Animation" tools:ignore="ResourceName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>