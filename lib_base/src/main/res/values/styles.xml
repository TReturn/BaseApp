<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    沉浸相关-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/profile_center_bg</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--沉浸展开-->
    <style name="TextAppearance_ExpandedTitle" parent="android:Animation" tools:ignore="ResourceName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--沉浸折叠-->
    <style name="TextAppearance_CollapsedTitle" parent="android:Animation" tools:ignore="ResourceName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--淡入淡出动画-->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/OutInAnimation</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="OutInAnimation" parent="android:Animation" tools:ignore="ResourceName">
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out</item>

    </style>

    <!--底部导航栏颜色-->
    <style name="BottomNavigation" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bottom_navigation_title</item>
        <item name="android:textColorSecondary">@color/text_default</item>
    </style>


</resources>